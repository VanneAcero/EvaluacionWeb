@model List<Datos.ViewModel.ViewModelTipoVehiculo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().CodigoVehiculo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Nombres)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoVehiculo)
            </td>
            <td>
                @if (item.Estado == 1)
                {
                    <label>Activo</label>
                }
                else
                {
                    <label>Inactivo</label>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombres)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DescripcionVehiculo">Modificar</a> |
                <a asp-action="Details" asp-route-id="@item.DescripcionVehiculo">Detalle</a> |
                @if (item.Estado == 1)
                {
                    <a asp-action="Activar" asp-route-id="@item.DescripcionVehiculo">Desactivar</a>
                }
                else
                {
                    <a asp-action="Desactivar" asp-route-id="@item.DescripcionVehiculo">Activar</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
